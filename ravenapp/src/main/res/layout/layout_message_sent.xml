<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingTop="4dp"
    android:paddingEnd="2dp">

    <include layout="@layout/layout_banner_chat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/bannerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_banner_holder"
            android:elevation="1dp"
            android:minWidth="100dp"
            android:padding="8dp"
            android:text="Banner"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="1dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:background="@color/colorGrey"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="@drawable/background_message_holder_indigo"
            android:elevation="1dp"
            android:padding="12dp"
            android:text="Hey!"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_message_holder_indigo"
            android:elevation="1dp"
            android:padding="4dp"
            android:text="11:40 AM"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="1dp"
            android:background="@drawable/badge_message_status_pending"
            android:elevation="1dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>